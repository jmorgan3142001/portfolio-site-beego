{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://127.0.0.1:8080",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack Launch",
            "configurations": ["Launch Server", "Launch Client"],
            "stopAll": true
        }
    ]
}